<div class="container-fullscreen">
  <div class="container1">
    <% @events.each do |event| %>
    <div class="card-product">
      <%= cl_image_tag event.photo, height: 300, width: 400, crop: :fill %>
      <div class="card-info">
        <div class="card-product-infos">
          <h2><%= event.name %> </h2>
          <p><strong><%= event.localisation %></strong>.</p>
        </div>
        <div class="row">
          <%= link_to "Modifier", edit_event_path(event.id), class: "btn2 btn-info" %>
          <%= link_to "Voir", event_path(event.id), class: "btn2 btn-info" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
