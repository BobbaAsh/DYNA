<div class="container-fullscreen">
  <div class="container1">
    <form class="form-inline">
      <%= form_tag events_path, method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Nom event ou localisation"
        %>
      <% end %>
    </form>
    <% @events.each do |event| %>
    <div class="card-product">
      <img src="https://static.mmzstatic.com/wp-content/uploads/2015/01/benevole-festival-musique-temoignage.jpg">
      <div class="card-product-infos">
        <h2><%= event.name %> </h2>
        <p>Event in <strong><%= event.localisation %></strong> only.</p>
          <%= link_to "Plus d'infos", event_path(event), class: "btn btn-info" %>
      </div>
      </div>
    <% end %>
</div>
</div>
