<div class="container-fullscreen">
  <div class="container3">
    <form class="form-inline">
      <%= form_tag events_path, method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Nom de l'évènement ou localisation"
        %>
      <% end %>
    </form>
    <% @events.each do |event| %>
      <%if event.visibility == true%>
        <div class="card-product2">
          <%= cl_image_tag event.photo, height: 200, width: 300, crop: :fill %>
          <div class="card-info2">
            <div class="card-product-infos2">
              <h2><%= event.name %> </h2>
              <h3><%= event.localisation %></h3>
            </div>
            <div class="card-product-infos2">
                <%= link_to "Plus d'infos", event_path(event), class: "btn2 btn-info" %>
            </div>
          </div>
        </div>
      <%end%>
    <% end %>
  </div>
</div>
