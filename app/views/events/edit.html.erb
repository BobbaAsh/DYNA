<div class="container">
    <%= simple_form_for(@event) do |f| %>
    <%= f.input :name, label: "Nom de l'évènement", placeholder: "Nom" %>
    <%= f.input :begin_date, label: "Date de début", placeholder: "jj/mm/aaaa" %>
    <%= f.input :end_date, label: "Date de fin", placeholder: "jj/mm/aaaa" %>
    <%= f.input :localisation, label: "Localisation", placeholder: "Adresse" %>
    <%= f.input :description, label: "Description", placeholder: "En quoi consiste ton évènement" %>

    <div class="custom-control custom-switch">
      <%= f.check_box :visibility, id: "customSwitch1", class: "custom-control-input" %>
      <label class="custom-control-label" for="customSwitch1">Rendre mon évènement visible</label>
    </div>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <div class="container6">
    <%= f.button :submit, value: "Valider", class: "btn2 btn-info" %>
    <% end %>
    </div>
</div>


