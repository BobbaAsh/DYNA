   <button type="button" data-toggle="modal" data-target="#exampleModal">Ajouter des documents</button>
              <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Envoie des documennts</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <%= simple_form_for([locals[:event], locals[:participation], locals[:model]]) do |f| %>
                    <%= f.input :name, placeholder: "name"  %>
                    <%= f.input :photo %>
                    <%= f.input :photo_cache, as: :hidden %>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <%= f.button :submit, class: "btn btn-primary" %>
                    <% end %>

                  </div>
                </div>
                  </div>
                </div>
