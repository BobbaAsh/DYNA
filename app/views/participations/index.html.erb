<div class="container-fullscreen">
  <div class="container1">
    <% @participations.each do |participation| %>
      <div class="card-product">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg">
        <div class="card-product-infos">
          <h2><%= participation.user.first_name %></h2>
          <p><%= participation.wanted_status %></p>
        </div>
        <div class="row col-lg-10">
          <%= simple_form_for "Accept" do |f| %>
          <%= f.input :status, :input_html => {value: true}, as: :hidden %>
          <%= f.button :submit, class: "btn btn-success"  %>
          <% end %>
          <%= simple_form_for "Decline" do |f| %>
          <%= f.input :status, :input_html => {value: false}, as: :hidden %>
          <%= f.button :submit, class: "btn btn-danger" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
